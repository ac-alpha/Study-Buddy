<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ashutoshchaubey.studybuddy.MainActivity">


    <Button
        android:id="@+id/apps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="@string/apps"
        android:background="@drawable/button_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="@dimen/views_margin_padding">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Alarm"
            android:textColor="#000000"/>

        <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
            android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ball_press_color="#FF5722"
            app:ball_release_color="#FF9E80"
            app:base_press_color="#BF360C"
            app:base_release_color="#FBE9E7"
            app:icon_press="@drawable/alarm_on"
            app:icon_release="@drawable/alarm_off" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_settings_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/views_margin_padding"
        app:backgroundTint="#FF5722"
        android:padding="@dimen/views_margin_padding"
        android:src="@drawable/settings_menu"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_settings_menu"
        android:layout_marginEnd="@dimen/views_margin_padding">
        <!--android:visibility="gone"-->
        <!--&gt;-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Phone Settings"
                android:textColor="#000000"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_settings_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_mobile"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Launcher Settings"
                android:textColor="#000000"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_settings_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_launcher"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
